<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Exe</OutputType>
    <Version>0.0.3</Version>
    <PackageId>Statix</PackageId>
    <Description>Statix is a C# static site generator that creates HTML pages from Markdown files.</Description>
    <PackageProjectUrl>https://github.com/swharden/Statix</PackageProjectUrl>
    <PackageTags>static site generator html markdown</PackageTags>
    <PackageProjectUrl>https://github.com/swharden/Statix</PackageProjectUrl>
    <RepositoryUrl>https://github.com/swharden/Statix</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageReleaseNotes>https://github.com/swharden/Statix/releases</PackageReleaseNotes>
    <PackageIcon>icon.png</PackageIcon>
    <Authors>Scott W Harden</Authors>
    <Company>Harden Technologies, LLC</Company>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <DebugType>portable</DebugType>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>

    <Deterministic>true</Deterministic>
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.8.0" />
    <PackageReference Include="Markdig" Version="0.26.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Include="icon.png" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
